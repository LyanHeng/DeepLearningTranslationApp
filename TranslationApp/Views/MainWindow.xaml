<Window x:Class="TranslationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TranslationApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="900" MinHeight="400" MinWidth="900"
        ResizeMode="CanResizeWithGrip"
        x:Name="Main">
    <Grid Background="DarkGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBox 
            Grid.Row="1" 
            Grid.Column="0" 
            Margin="50,50,50,50"
            BorderBrush="LightGray"
            Background="Transparent"
            x:Name="textToTranslate"
            Style="{StaticResource TextBoxTheme}">
        </TextBox>

        <Button 
            Grid.Row="1" 
            Grid.Column="1" 
            Margin="75,100" 
            Height="75" 
            Width="120" 
            Background="LightGray"
            BorderBrush="Gray"
            Click="Translate" 
            Content="Translate">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7" />
                </Style>
            </Button.Resources>
        </Button>


        <Border 
            BorderBrush="LightGray" 
            BorderThickness="0.5" 
            HorizontalAlignment="Stretch" 
            MinHeight="50" 
            Margin="50,50,50,50" 
            VerticalAlignment="Stretch" 
            MinWidth="50"
            CornerRadius="7" Grid.Column="2" Grid.Row="1">
            <Border.LayoutTransform>
                <ScaleTransform ScaleX="2" ScaleY="2"/>
            </Border.LayoutTransform>
            <TextBlock 
            Grid.Row="1" 
            Grid.Column="2" 
            Margin="25" 
            x:Name="translatedText" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center">
            </TextBlock>
        </Border>

        <Button 
            Name="btnOpenFile" 
            Click="btnOpenFile_Click"
            Content="File" 
            HorizontalAlignment="Left" 
            Margin="40,28,0,0" 
            VerticalAlignment="Top" 
            Width="75">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>
        <!--<Button 
            Content="Input Text" 
            HorizontalAlignment="Left" 
            Margin="40,13,0,0" 
            VerticalAlignment="Top" 
            Width="75">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>-->

        <ComboBox 
            Margin="150,20,20,20" 
            Text="Select Language" 
            HorizontalAlignment="Stretch"
            IsEditable="True"
            IsReadOnly="True">
            <ComboBoxItem>
                <TextBlock><Run Text="French"/></TextBlock>
            </ComboBoxItem>
            <ComboBoxItem>
                <TextBlock><Run Text="Greek"/></TextBlock>
            </ComboBoxItem>
            <ComboBoxItem>
                <TextBlock><Run Text="German"/></TextBlock>
            </ComboBoxItem>
        </ComboBox>

        <ComboBox 
            Margin="20,20,150,20" 
            Text="Select Language" 
            HorizontalAlignment="Stretch"
            IsEditable="True"
            IsReadOnly="True" Grid.Column="2">
            <ComboBoxItem>
                <TextBlock><Run Text="French"/></TextBlock>
            </ComboBoxItem>
            <ComboBoxItem>
                <TextBlock><Run Text="Greek"/></TextBlock>
            </ComboBoxItem>
            <ComboBoxItem>
                <TextBlock><Run Text="German"/></TextBlock>
            </ComboBoxItem>
        </ComboBox>

    </Grid>
</Window>
