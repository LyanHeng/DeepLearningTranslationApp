            Name="box1"
            Margin="150,20,20,20" 
            Text="Auto-Detect" 
            HorizontalAlignment="Stretch"
            IsEditable="True"
            IsReadOnly="True"
            FontFamily="calibri">
            <ComboBox.Resources>

            </ComboBox.Resources>

            <ComboBoxItem>
                <TextBlock><Run Text="French"/></TextBlock>
            </ComboBoxItem>
            <ComboBoxItem>
                <TextBlock><Run Text="Greek"/></TextBlock>
            </ComboBoxItem>
            <ComboBoxItem>
                <TextBlock><Run Text="German"/></TextBlock>
            </ComboBoxItem>
        </ComboBox>-->
        

        <ComboBox 
            Name="box2"
            Margin="20,20,150,20" 
            Text="English" 
            HorizontalAlignment="Stretch"
            FontFamily="/Fonts/#Roboto"
            IsEditable="True"
            IsReadOnly="True" Grid.Column="2">
            <ComboBoxItem Name="french">
                <TextBlock ><Run Text="French"/></TextBlock>
            </ComboBoxItem>
            <ComboBoxItem Name="greek">
                <TextBlock ><Run Text="Greek"/></TextBlock>
            </ComboBoxItem>
            <ComboBoxItem Name="german">
                <TextBlock ><Run Text="German"/></TextBlock>
            </ComboBoxItem>
        </ComboBox>

        <TextBox 
            Grid.Row="1" 
            Grid.Column="2" 
            Margin="50,50,50,50"
            BorderBrush="DarkGray"
            x:Name="translatedText"
            BorderThickness="1"
            FontSize="12"
            FontFamily="/Fonts/#Roboto"
            Style="{StaticResource TextBoxStyle}"
            IsReadOnly="True">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7" />
                </Style>
            </TextBox.Resources>
        </TextBox>

        <RadioButton Grid.Row="0"
                     Grid.Column="2"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Top"
                     Margin="0,20,20,0"
                     x:Name="lightMode"
                     Content="Light"
                     IsChecked="True"
                     FontFamily="/Fonts/#Roboto"
                     GroupName="modeSelection"
                     Checked="LightModeChecked"/>

        <RadioButton Grid.Row="0"
                     Grid.Column="2"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Top"
                     Margin="0,40,21,0"
                     x:Name="darkMode"
                     Content="Dark"
                     IsChecked="False"
                     FontFamily="/Fonts/#Roboto"
                     GroupName="modeSelection"
                     Checked="DarkModeChecked"/>
    </Grid>
</Window>
